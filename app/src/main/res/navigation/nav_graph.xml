            android:id="@+id/action_MiniGame2Fragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/MiniGame3Fragment"
        android:name="com.project.mathg.ui.game.MiniGame3Fragment"
        android:label="@string/mini_game_3_fragment"
        tools:layout="@layout/fragment_mini_game_3">
        <action
            android:id="@+id/action_MiniGame3Fragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/MiniGame4Fragment"
        android:name="com.project.mathg.ui.game.MiniGame4Fragment"
        android:label="@string/mini_game_4_fragment"
        tools:layout="@layout/fragment_mini_game_4">
        <action
            android:id="@+id/action_MiniGame4Fragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />
    </fragment>
</navigation>